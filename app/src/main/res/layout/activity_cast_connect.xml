<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:flexDirection="column"
    app:justifyContent="center"
    app:alignItems="center"
    tools:context=".CastConnect">

    <ImageView
        android:id="@+id/cast_photo"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:src="@mipmap/cast"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/cast_instruction"
        android:layout_below="@+id/cast_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_your_chromecast"
        android:textSize="28sp" />

    <androidx.mediarouter.app.MediaRouteButton
        android:id="@+id/cast_button"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:text="@string/choose"
        android:textSize="25sp"
        android:layout_below="@+id/cast_instruction" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="castClick"
        android:text="@string/sendjson"
        />
</com.google.android.flexbox.FlexboxLayout>