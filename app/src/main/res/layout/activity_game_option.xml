<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GameOption"
    android:padding="13dp">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignItems="center"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="space_between">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:text="@string/back"
            android:onClick="back"/>

        <TextView
            android:id="@+id/bow_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bowling_setup"
            android:textSize="25sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="50dp"
            android:text="@string/next" />
    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/options"
        android:layout_below="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="column"
        app:alignItems="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:labelFor="@+id/round_label"
                android:id="@+id/round_label"
                style="@style/FormTitle"
                android:text="@string/round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.slider.Slider
                android:layout_below="@+id/round_label"
                android:id="@+id/round_entry"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:valueFrom="1"
                android:stepSize="1"
                android:valueTo="10" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/FormTitle"
                android:id="@+id/map_label"
                android:text="@string/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/map_spinner"
                android:layout_width="300dp"
                android:layout_height="50sp"
                android:entries="@array/map_option"
                android:layout_below="@+id/map_label" />
        </RelativeLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/player_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="row"
            app:alignItems="center"
            app:justifyContent="center">
            <TextView
                android:id="@+id/player_section"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                style="@style/FormTitle"
                android:text="@string/player"
                android:layout_below="@+id/map_spinner" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add"
                android:layout_height="25sp"
                android:layout_width="25dp"
                android:text="@string/add"
                android:onClick="add"
                android:background="#6750A4"
                android:textColor="@color/white" />

        </com.google.android.flexbox.FlexboxLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/list"
                android:text="@string/none"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                app:flexDirection="column" />
        </RelativeLayout>
    </com.google.android.flexbox.FlexboxLayout>
</RelativeLayout>